{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/images/*.{svg,png,gif,ico,webp}",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "route": "/css/*",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "route": "/js/*",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{svg,png,gif,ico,webp,jpg,jpeg}",
      "*.json",
      "*.css",
      "*.js"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".wasm": "application/wasm"
  },
  "auth": {
    "rolesSource": "/api/me"
  }
}
